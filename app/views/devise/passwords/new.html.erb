<div class="container-fluid">

  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.label :email, required: true %>
      <%= f.input :email, label: false, autofocus: true, :error => false, :input_html => {:maxlength => 32, :size => 32}, autocomplete: "off" %><br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
